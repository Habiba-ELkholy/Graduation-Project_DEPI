@model c2cUniversitees.Models.Product
@using System.Security.Claims

@{
    ViewData["Title"] = @Model.Title;
    int? currentUserId = Context.Session.GetInt32("UserId");
}
<!--style you page-->
<style>
</style>

<div class="product-detail-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card product-card fade-in">

                    <div class="product-header">
                        <h1 class="product-title">@Model.Title</h1>
                        <div class="product-price">
                            <i class="fas fa-tag"></i>
                            @Model.Price.ToString("C") جنيه مصري
                        </div>
                    </div>

                    <div class="card-body p-0">
                        <div class="row g-0">

                            <!-- صورة المنتج -->
                            <div class="col-lg-5">
                                <div class="product-image-container">
                                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                                    {
                                    <img src="@($"/images/{Model.ImagePath}")"
                                         alt="@Model.Title"
                                         class="product-image">
                                    }
                                    else
                                    {
                                    <div class="no-image-placeholder">
                                        <i class="fas fa-image fa-3x mb-3"></i>
                                        <p>لا توجد صورة متاحة</p>
                                    </div>
                                    }
                                </div>
                            </div>

                            <!-- تفاصيل المنتج -->
                            <div class="col-lg-7">
                                <div class="product-details">

                                    <!-- المعلومات الأساسية -->
                                    <div class="details-table">
                                        <dl class="row">
                                            <dt class="col-sm-4">التصنيف:</dt>
                                            <dd class="col-sm-8">
                                                <span class="category-badge">@Model.Category</span>
                                            </dd>

                                            <dt class="col-sm-4">تاريخ الإضافة:</dt>
                                            <dd class="col-sm-8">
                                                <i class="fas fa-calendar text-muted me-2"></i>
                                                @Model.PostedDate.ToString("yyyy/MM/dd")
                                            </dd>
                                        </dl>
                                    </div>

                                    <!-- الوصف -->
                                    <div class="description-section">
                                        <h4 class="description-title">
                                            <i class="fas fa-info-circle"></i>
                                            الوصف التفصيلي
                                        </h4>
                                        <p class="description-text">@Model.Description</p>
                                    </div>




                                    @if (Model.Seller != null)
                        {
                                    <div class="bg-warning bg-opacity-10 p-4 rounded-3 border border-warning">
                                        <h4 class="mb-3 text-warning"><i class="fas fa-user-tag"></i> معلومات البائع</h4>
                                        <ul class="list-unstyled">
                                            <li>**البائع:** <span class="fw-bold">@Model.Seller.Username</span></li>
                                            <li>**الكلية:** <span class="badge bg-primary fs-6">@Model.Seller.CollegeName</span></li>

                                            @if (!currentUserId.HasValue)
                                    {
                                            <li>
                                                <p class="alert alert-info mt-3 text-center">
                                                    <i class="fas fa-lock"></i> **سجل الدخول لعرض خيارات التواصل.**
                                                </p>
                                            </li>
                                    }
                                    else if (currentUserId.Value != Model.SellerId)
                                    {

                                    }
                                    else
                                    {
                                            <li>
                                                <p class="mt-3 text-success fw-bold">
                                                    <i class="fas fa-check-circle"></i> هذا المنتج معروض بواسطتك. (لست بحاجة للتواصل)
                                                </p>
                                            </li>
                                    }
                                        </ul>
                                    </div>
                        }
                        else
                        {
                                    <div class="alert alert-danger">بيانات البائع غير متوفرة أو تم حذف الحساب.</div>
                        }
                                </div>
                            </div>
                        </div>


                        <div class="text-center">
                            <a asp-action="Index" class="back-btn">
                                <i class="fas fa-arrow-right"></i>
                                العودة إلى قائمة المنتجات
                            </a>


                        </div>
                        <div class="mt-4 d-flex align-items-center">
                            <a asp-controller="Chat" asp-action="Index" asp-route-receiverId="@Model.SellerId"
                               style="width: 60px; height: 60px; background-color: #0084ff; border-radius: 50%;
              display: flex; align-items: center; justify-content: center;
              color: white; text-decoration: none; box-shadow: 0 4px 10px rgba(0, 132, 255, 0.3); transition: transform 0.2s;">
                                <i class="fas fa-comment-dots" style="font-size: 28px;"></i>
                            </a>
                            <span class="me-3 text-muted fw-bold">تواصل مع البائع</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const contactBtn = document.querySelector('.contact-btn');
            if (contactBtn) {
                contactBtn.addEventListener('mouseenter', function () {
                    this.style.transform = 'translateY(-3px)';
                });

                contactBtn.addEventListener('mouseleave', function () {
                    this.style.transform = 'translateY(0)';
                });
            }

            const productImage = document.querySelector('.product-image');
            if (productImage) {
                productImage.addEventListener('load', function () {
                    this.style.opacity = '1';
                });
            }
        });
    </script>
